@page
@model CRUDProject.Pages.Clientes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a asp-page="Create">Crear Nuevo</a>
</p>
<form>
    <p>
        Filtro: <select asp-for="filter">
            <option value="All">Todo</option>
            <option value="Id">Id</option>
            <option value="Name">Nombre</option>
            <option value="Address">Dirección</option>
            <option value="Email">Correo</option>
        </select>
        <input type="text" asp-for="SearchString" />
        <input type="submit" value="Buscar" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cliente) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Ver</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
